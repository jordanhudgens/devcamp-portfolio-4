  <div class="blog-post">
    <h2 class="blog-post-title"><%= link_to blog.title.upcase, blog %></h2>
    <p class="blog-post-meta">Published <%= distance_of_time_in_words(blog.created_at, Time.now) %> ago</p>

    <p>
      <%= blog.body %>
    </p> 

    <% if logged_in?(:site_admin) %>
        <%= link_to toggle_status_blog_path(blog), class: blog_status_class(blog) do %>
          <i class="fa fa-file-text "></i> <%= blog.status %>
          <% end %>
        <%= link_to edit_blog_path(blog), class: "btn btn-primary" do %>
          <i class="fa fa-pencil-square-o"></i> Edit
          <% end %>
        <%= link_to blog, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" do %>
          <i class="fa fa-trash"></i> Delete
          <% end %>
    <% end %>
  </div>


